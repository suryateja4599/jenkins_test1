pipeline {
    agent any

    stages {
        stage('Fetch Dockerfile') {
            steps {
                script {
                    // Check out the code from the feature branch
                    checkout([$class: 'GitSCM', branches: [[name: 'feature']], userRemoteConfigs: [[url: 'https://github.com/suryateja4599/jenkins_test1.git']]])

                
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Build the Docker image using the Dockerfile from the workspace
                    sh "sudo docker build -t  surya459/practice-me459:python-test ."
                    sh "sudo docker login -u surya459 -p Surya@D369"
                    // Push the Docker image to a Docker registry
                    sh "sudo docker push surya459/practice-me459:python-test"
                    sh "sudo docker run --network mynetwork surya459/practice-me459:python-test"

                }
            }
        }
        stage('Fetch Deployment YAML') {
            steps {
                script {
                     sh 'curl -o deployment.yml https://github.com/suryateja4599/jenkins_test1.git/k8/path/to/deployment.yml'
                }
            }
        }
        stage('Deploy to Kubernetes') {
            steps {
                script {
                     // Set the KUBECONFIG environment variable to point to the kubeconfig secret
                    sh "export KUBECONFIG=/mnt/secrets/kubeconfig"
                    // Deploy the Docker image to Kubernetes
                   sh "kubectl apply -f deployment.yml"
                }
            }
        }
    }
}
